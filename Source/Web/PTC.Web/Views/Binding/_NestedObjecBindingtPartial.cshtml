@model PTC.Web.ViewModels.PersonWithAddress


@using (Html.BeginForm("NestedObject", "Binding", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name)
    </div>

    <div>
        @Html.LabelFor(m => m.Age)
        @Html.EditorFor(m => m.Age)
    </div>

    <div>
        @Html.LabelFor(m => m.IsActiv)
        @Html.EditorFor(m => m.IsActiv)
    </div>

    <div>
        @Html.LabelFor(m => m.Address.City)
        @Html.EditorFor(m => m.Address.City)
    </div>

    <div>
        @Html.LabelFor(m => m.Address.Country)
        @Html.EditorFor(m => m.Address.Country)
    </div>

    @Html.Submit()
}